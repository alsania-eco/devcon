{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["typescript/**/*", "~*/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
